var a = 10
step1 > var a
step2 > a = 10

var => Redeclare and reassign
let => Dont Redeclare but we can reassign
const => Cannot Redeclare and nor reassign

const sum = (a,b) => {
    var i = 10
}

const p = "hi"
for(i=0;i<10;i++){
    let h = "inside for"
    console.log(p + i)
}

